@model WebsiteQLDichVuMobiFone.Models.NguoiDung

@{
    ViewData["Title"] = "Chi Tiết Người Dùng";
}

<h2 class="text-center">Chi Tiết Người Dùng</h2>
<hr />
<div class="row justify-content-center">
    <div class="col-md-6 card p-4 shadow-lg">
        <div class="text-center mb-3">
            <img src="~/img/user/@Model.AnhDaiDien" class="rounded-circle" width="100" height="100" alt="Ảnh đại diện" />
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label class="form-label fw-bold">Họ Tên:</label>
                <p class="form-control">@Model.HoTen</p>
            </div>
            <div class="col-md-6 mb-3">
                <label class="form-label fw-bold">CCCD:</label>
                <p class="form-control">@Model.Cccd</p>
            </div>
            <div class="col-md-6 mb-3">
                <label class="form-label fw-bold">Email:</label>
                <p class="form-control">@Model.Email</p>
            </div>
            <div class="col-md-6 mb-3">
                <label class="form-label fw-bold">Số Điện Thoại:</label>
                <p class="form-control">@Model.SoDienThoai</p>
            </div>
            <div class="col-md-6 mb-3">
                <label class="form-label fw-bold">Địa Chỉ:</label>
                <p class="form-control">@Model.DiaChi</p>
            </div>
            <div class="col-md-6 mb-3">
                <label class="form-label fw-bold">Tên Đăng Nhập:</label>
                <p class="form-control">@Model.TenDangNhap</p>
            </div>
            <div class="col-md-6 mb-3">
                <label class="form-label fw-bold">Quyền:</label>
                <p class="form-control">@(Model.Quyen == 1 ? "Admin" : "Người Dùng")</p>
            </div>
            <div class="col-md-6 mb-3">
                <label class="form-label fw-bold">Trạng Thái:</label>
                <p class="form-control">@(Model.Trangthai == 1 ? "Hoạt động" : "Bị khóa")</p>
            </div>
        </div>

        <div class="d-flex justify-content-between">
            <a asp-action="Edit" asp-route-id="@Model.IdnguoiDung" class="btn btn-primary">Chỉnh Sửa</a>
            <a asp-action="Index" class="btn btn-secondary">Quay Lại</a>
        </div>
    </div>
</div>
