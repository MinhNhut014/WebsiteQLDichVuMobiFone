@model WebsiteQLDichVuMobiFone.Models.GoiDangKy

@{
    ViewData["Title"] = "Thêm Gói Đăng Ký";
}

<h1 class="mb-4 text-primary fw-bold text-center">
    <i class="bi bi-plus-circle"></i> Thêm Gói Đăng Ký
</h1>

<div class="card shadow-lg p-4 rounded-4 border-0">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="TenGoi" class="form-label"></label>
                            <input asp-for="TenGoi" class="form-control shadow-sm border-primary" />
                            <span asp-validation-for="TenGoi" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="GiaGoi" class="form-label"></label>
                            <input asp-for="GiaGoi" class="form-control shadow-sm border-primary" type="number" step="0.01" />
                            <span asp-validation-for="GiaGoi" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="ThoiHan" class="form-label"></label>
                            <input asp-for="ThoiHan" class="form-control shadow-sm border-primary" />
                            <span asp-validation-for="ThoiHan" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="TinhNang" class="form-label"></label>
                            <input asp-for="TinhNang" class="form-control shadow-sm border-primary" />
                            <span asp-validation-for="TinhNang" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="IdloaiGoi" class="form-label"></label>
                            <select asp-for="IdloaiGoi" class="form-control shadow-sm border-primary" asp-items="ViewBag.IdloaiGoi"></select>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="ThongTinGoi" class="form-label"></label>
                            <textarea asp-for="ThongTinGoi" class="form-control shadow-sm border-primary" rows="7" style="resize: none; overflow-y: auto;"></textarea>
                            <span asp-validation-for="ThongTinGoi" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="ThongTinChiTiet" class="form-label fw-semibold">📋 Thông Tin Chi Tiết</label>
                            <textarea asp-for="ThongTinChiTiet" id="ThongTinChiTiet" class="form-control rounded-3 shadow-sm" rows="6" style="resize: none;"></textarea>
                            <span asp-validation-for="ThongTinChiTiet" class="text-danger"></span>
                        </div>

                        <button type="button" class="btn btn-outline-secondary mb-3" onclick="showPreview()">👁️ Xem trước</button>

                        <div id="previewModal" class="modal fade" tabindex="-1">
                            <div class="modal-dialog modal-lg">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title">Xem trước nội dung</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                    </div>
                                    <div class="modal-body">
                                        <div id="previewContent" class="p-3 border rounded bg-light" style="max-height: 500px; overflow-y: auto;"></div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>

                <div class="form-group text-center mt-4">
                    <button type="submit" class="btn btn-primary shadow-sm px-4">
                        <i class="fa-solid fa-check"></i> Thêm mới
                    </button>
                    <a asp-action="Index" class="btn btn-secondary shadow-sm px-4 ms-2">
                        <i class="fa-solid fa-arrow-left"></i> Quay lại
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://cdn.ckeditor.com/4.20.2/standard/ckeditor.js"></script>
    <script>
        CKEDITOR.replace('ThongTinChiTiet', {
            height: 300,
            extraPlugins: 'table',
            filebrowserUploadUrl: '/DichVu/Upload',
            filebrowserUploadMethod: 'form',
            allowedContent: true
        });

        function showPreview() {
            var editorData = CKEDITOR.instances.ThongTinChiTiet.getData();
            document.getElementById("previewContent").innerHTML = editorData;
            var previewModal = new bootstrap.Modal(document.getElementById('previewModal'));
            previewModal.show();
        }
    </script>
}
