@model WebsiteQLDichVuMobiFone.Models.Sim

@{
    ViewData["Title"] = "Thêm SIM";
}

<div class="container mt-4">
    <h2 class="text-primary mb-3">Thêm SIM</h2>
    <div class="card shadow-sm p-4 rounded">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="IddichVu" class="fw-bold">Dịch Vụ</label>
                <select asp-for="IddichVu" class="form-control" asp-items="ViewBag.IddichVu"></select>
            </div>

            <div class="form-group mb-3">
                <label asp-for="SoThueBao" class="fw-bold">Số Thuê Bao</label>
                <input asp-for="SoThueBao" class="form-control" placeholder="Nhập số thuê bao..." />
                <span asp-validation-for="SoThueBao" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="IdloaiSo" class="fw-bold">Loại Số</label>
                <select asp-for="IdloaiSo" class="form-control" asp-items="ViewBag.IdloaiSo"></select>
            </div>

            <div class="form-group mb-3">
                <label asp-for="KhuVucHoaMang" class="fw-bold">Khu Vực Hòa Mạng</label>
                <input asp-for="KhuVucHoaMang" class="form-control" placeholder="Nhập khu vực hòa mạng..." />
                <span asp-validation-for="KhuVucHoaMang" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="IdtrangThaiSim" class="fw-bold">Trạng Thái SIM</label>
                <select asp-for="IdtrangThaiSim" class="form-control" asp-items="ViewBag.IdtrangThaiSim"></select>
            </div>

            <div class="form-group mb-3">
                <label asp-for="GoiDangKyDiKem" class="fw-bold">Gói Đăng Ký Đi Kèm</label>
                <select asp-for="GoiDangKyDiKem" class="form-control" asp-items="ViewBag.GoiDangKyDiKem"></select>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-success">
                    <i class="fa-solid fa-check"></i> Lưu
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fa-solid fa-arrow-left"></i> Quay lại
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
