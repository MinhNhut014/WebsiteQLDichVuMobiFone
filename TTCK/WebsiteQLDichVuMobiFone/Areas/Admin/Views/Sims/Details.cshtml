@model WebsiteQLDichVuMobiFone.Models.Sim

@{
    ViewData["Title"] = "Chi tiết SIM";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-gradient text-white text-center py-3" style="background: linear-gradient(135deg, #4c84ff, #1c39bb);">
            <h2 class="mb-0">📋 Chi Tiết SIM</h2>
        </div>
        <div class="card-body p-4">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-4">
                        <label class="form-label fw-semibold">📞 Số Thuê Bao</label>
                        <input class="form-control rounded-3 shadow-sm" value="@Model.SoThueBao" readonly />
                    </div>
                    <div class="form-group mb-4">
                        <label class="form-label fw-semibold">💰 Phí Hòa Mạng</label>
                        <input class="form-control rounded-3 shadow-sm" value="@Model.PhiHoaMang" readonly />
                    </div>
                    <div class="form-group mb-4">
                        <label class="form-label fw-semibold">🔢 Loại Số</label>
                        <input class="form-control rounded-3 shadow-sm" value="@Model.IdloaiSoNavigation.TenLoaiSo" readonly />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-4">
                        <label class="form-label fw-semibold">🌍 Khu Vực Hòa Mạng</label>
                        <input class="form-control rounded-3 shadow-sm" value="@Model.KhuVucHoaMang" readonly />
                    </div>
                    <div class="form-group mb-4">
                        <label class="form-label fw-semibold">📋 Trạng Thái SIM</label>
                        <input class="form-control rounded-3 shadow-sm" value="@Model.IdtrangThaiSimNavigation.TenTrangThai" readonly />
                    </div>
                    <div class="form-group mb-4">
                        <label class="form-label fw-semibold">📦 Gói Đăng Ký Đi Kèm</label>
                        <input class="form-control rounded-3 shadow-sm" value="@Model.GoiDangKyDiKemNavigation?.TenGoi " Không có"" readonly />
                    </div>
                </div>
            </div>
            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-outline-primary rounded-3 px-4">🔙 Quay lại</a>
                <a asp-action="Edit" asp-route-id="@Model?.Idsim" class="btn btn-primary rounded-3 px-4">✏️ Chỉnh sửa</a>
            </div>
        </div>
    </div>
</div>
