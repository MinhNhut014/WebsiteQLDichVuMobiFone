@model WebsiteQLDichVuMobiFone.Models.ChuDe

@{
    ViewData["Title"] = "Chỉnh Sửa Chủ Đề";
}

<div class="container mt-4">
    <div class="d-flex justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg p-4 rounded-4 border-0">
                <h2 class="mb-4 text-warning fw-bold text-center">
                    <i class="bi bi-pencil-square"></i> Chỉnh Sửa Chủ Đề
                </h2>

                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    <input type="hidden" asp-for="IdchuDe" />

                    <div class="mb-3">
                        <label asp-for="TenChuDe" class="form-label fw-bold text-secondary">Tên Chủ Đề</label>
                        <input asp-for="TenChuDe" class="form-control shadow-sm border-warning rounded-3"
                               placeholder="Nhập tên chủ đề..." />
                        <span asp-validation-for="TenChuDe" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-center mt-4">
                        <button type="submit" class="btn btn-warning px-4 py-2 fw-bold me-2 rounded-pill shadow-sm">
                            <i class="fa-solid fa-save"></i> Lưu thay đổi
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary px-4 py-2 fw-bold rounded-pill shadow-sm">
                            <i class="fa-solid fa-arrow-left"></i> Quay lại
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
