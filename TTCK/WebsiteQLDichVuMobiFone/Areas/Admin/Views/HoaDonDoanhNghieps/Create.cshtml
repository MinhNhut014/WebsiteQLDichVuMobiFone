@model WebsiteQLDichVuMobiFone.Models.HoaDonDoanhNghiep

@{
    ViewData["Title"] = "Tạo Hóa Đơn Doanh Nghiệp";
}

<div class="container mt-4">
    <h2 class="text-primary mb-3">
        <i class="fa-solid fa-file-invoice"></i> Tạo Hóa Đơn Doanh Nghiệp
    </h2>

    <div class="card shadow-lg p-4 rounded border-0">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="IdnguoiDung" class="fw-bold">Người Dùng</label>
                <select asp-for="IdnguoiDung" class="form-control border-primary" asp-items="ViewBag.IdnguoiDung"></select>
            </div>

            <div class="form-group mb-3">
                <label asp-for="IdtrangThai" class="fw-bold">Trạng Thái</label>
                <select asp-for="IdtrangThai" class="form-control border-primary" asp-items="ViewBag.IdtrangThai"></select>
            </div>

            <div class="form-group mb-3">
                <label asp-for="TenCongTy" class="fw-bold">Tên Công Ty</label>
                <input asp-for="TenCongTy" class="form-control border-primary" placeholder="Nhập tên công ty..." />
                <span asp-validation-for="TenCongTy" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="SoDienThoaiCongTy" class="fw-bold">Số Điện Thoại Công Ty</label>
                <input asp-for="SoDienThoaiCongTy" class="form-control border-primary" placeholder="Nhập số điện thoại công ty..." />
                <span asp-validation-for="SoDienThoaiCongTy" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="EmailCongTy" class="fw-bold">Email Công Ty</label>
                <input asp-for="EmailCongTy" class="form-control border-primary" placeholder="Nhập email công ty..." />
                <span asp-validation-for="EmailCongTy" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="DiaChiCongTy" class="fw-bold">Địa Chỉ Công Ty</label>
                <input asp-for="DiaChiCongTy" class="form-control border-primary" placeholder="Nhập địa chỉ công ty..." />
                <span asp-validation-for="DiaChiCongTy" class="text-danger"></span>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-success shadow-sm">
                    <i class="fa-solid fa-check"></i> Lưu
                </button>
                <a asp-action="Index" class="btn btn-secondary shadow-sm">
                    <i class="fa-solid fa-arrow-left"></i> Quay lại
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
