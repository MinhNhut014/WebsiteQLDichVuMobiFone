@model WebsiteQLDichVuMobiFone.Models.LoaiSo

@{
    ViewData["Title"] = "Thêm Loại Số";
}

<div class="container mt-4">
    <h2 class="text-primary mb-3">Thêm Loại Số</h2>
    <div class="card shadow-sm p-4 rounded">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <!-- Nhập Tên Loại Số -->
            <div class="form-group mb-3">
                <label asp-for="TenLoaiSo" class="fw-bold">Tên Loại Số</label>
                <input asp-for="TenLoaiSo" class="form-control" placeholder="Nhập tên loại số..." required />
                <span asp-validation-for="TenLoaiSo" class="text-danger"></span>
            </div>

            <!-- Nút Lưu -->
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-success">
                    <i class="fa-solid fa-check"></i> Lưu
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fa-solid fa-arrow-left"></i> Quay lại
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
