@model WebsiteQLDichVuMobiFone.Models.LoaiSo

@{
    ViewData["Title"] = "Chỉnh Sửa Loại Số";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-gradient text-white text-center py-3" style="background: linear-gradient(135deg, #4c84ff, #1c39bb);">
            <h2 class="mb-0">✏️ Chỉnh Sửa Loại Số</h2>
        </div>
        <div class="card-body p-4">
            <form asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="IdloaiSo" />

                <div class="form-group mb-4">
                    <label asp-for="TenLoaiSo" class="form-label fw-semibold">📋 Tên Loại Số</label>
                    <input asp-for="TenLoaiSo" class="form-control rounded-3 shadow-sm" placeholder="Nhập tên loại số..." required />
                    <span asp-validation-for="TenLoaiSo" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-primary rounded-3 px-4">🔙 Quay lại</a>
                    <button type="submit" class="btn btn-primary rounded-3 px-4">💾 Lưu</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
