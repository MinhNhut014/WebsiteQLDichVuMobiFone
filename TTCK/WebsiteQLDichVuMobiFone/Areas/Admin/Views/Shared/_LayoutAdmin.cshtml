<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mobifone Dashboard | Dashboard</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebsiteQLDichVuMobiFone.styles.css" asp-append-version="true" />
    <!-- Favicon -->
    
    <link rel="shortcut icon" href="~/img/svg/logo.svg" type="image/x-icon">
    <!-- Custom styles -->
    <link href="~/admin/css/style.css" rel="stylesheet" />
    <link href="~/admin/css/style.min.css" rel="stylesheet" />
    <a href="~/admin/css/style.min.css.map"></a>
    <!-- Thêm Chart.js từ CDN -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    
    <script src="https://cdn.ckeditor.com/4.20.2/full/ckeditor.js"></script>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 10px;
            margin-bottom: 10px;
        }

        th, td {
            border: 1px solid #ccc;
            padding: 8px;
            text-align: center;
        }

        th {
            background-color: #f8f9fa;
            font-weight: bold;
        }

        td {
            font-size: 14px;
        }

        .bg-light {
            background-color: #f5f5f5 !important;
        }
    </style>

</head>
<body class="sb-nav-fixed">
    <div class="layer"></div>
    <!-- ! Body -->
    <a class="skip-link sr-only" href="#skip-target">Skip to content</a>
    <div class="page-flex">
        <!-- ! Sidebar -->
        <aside class="sidebar">
            <div class="sidebar-start">
                <div class="sidebar-head">
                    <a href="/" class="logo-wrapper" title="Home">
                        <span class="sr-only">Home</span>
                        <!-- Thay <span> bằng <img> để chèn logo dưới dạng hình ảnh -->
                        <img src="~/img/logo/logo2.jfif" id="img-logomobifone" alt="Mobifone Logo" class="icon logo" />
                        <div class="logo-text">
                            <span class="logo-title">Mobifone</span>
                            <span class="logo-subtitle">Dashboard</span>
                        </div>
                    </a>
                    <button class="sidebar-toggle transparent-btn" title="Menu" type="button">
                        <span class="sr-only">Toggle menu</span>
                        <span class="icon menu-toggle" aria-hidden="true"></span>
                    </button>
                </div>
                <div class="sidebar-body">
                    <ul class="sidebar-body-menu">
                        <li>
                            <a class="active" asp-controller="Home" asp-action="Index"><span class="icon home" aria-hidden="true"></span>Bảng Điều Khiển</a>
                        </li>
                        <li>
                            <a asp-controller="NguoiDungs" asp-action="Index"><span class="icon user-3" aria-hidden="true"></span>Quản Lý Người Dùng</a>
                        </li>
                        <li>
                            <a class="show-cat-btn" href="##">
                                <span class="icon folder" aria-hidden="true"></span>Quản Lý Sim
                                <span class="category__btn transparent-btn" title="Open list">
                                    <span class="sr-only">Open list</span>
                                    <span class="icon arrow-down" aria-hidden="true"></span>
                                </span>
                            </a>
                            <ul class="cat-sub-menu">
                                <li>
                                    <a asp-controller="LoaiSoes" asp-action="Index"> Thể Loại Sim</a>
                                </li>
                                <li>
                                    <a asp-controller="Sims" asp-action="Index">Sim</a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <a class="show-cat-btn" href="##">
                                <span class="icon folder" aria-hidden="true"></span>Dịch Vụ Di Động
                                <span class="category__btn transparent-btn" title="Open list">
                                    <span class="sr-only">Open list</span>
                                    <span class="icon arrow-down" aria-hidden="true"></span>
                                </span>
                            </a>
                            <ul class="cat-sub-menu">
                                <li>
                                    <a asp-controller="LoaiDichVuDiDongs" asp-action="Index"> Thể Loại</a>
                                </li>
                                <li>
                                    <a asp-controller="LoaiGoiDangKies" asp-action="Index">Quản Lý Dịch Vụ</a>
                                </li>
                                <li>
                                    <a asp-controller="GoiDangKies" asp-action="Index">Quản Lý Gói</a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <a class="show-cat-btn" href="##">
                                <span class="icon folder" aria-hidden="true"></span>Dịch Vụ Doanh Nghiệp
                                <span class="category__btn transparent-btn" title="Open list">
                                    <span class="sr-only">Open list</span>
                                    <span class="icon arrow-down" aria-hidden="true"></span>
                                </span>
                            </a>
                            <ul class="cat-sub-menu">
                                <li>
                                    <a asp-controller="NhomDichVuDoanhNghieps" asp-action="Index"> Thể Loại</a>
                                </li>
                                <li>
                                    <a asp-controller="DichVuDoanhNghieps" asp-action="Index">Quản Lý Dịch Vụ</a>
                                </li>
                                <li>
                                    <a asp-controller="GoiDichVus" asp-action="Index">Gói Dịch Vụ</a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <a class="show-cat-btn" href="##">
                                <span class="icon folder" aria-hidden="true"></span>Dịch Vụ Khác
                                <span class="category__btn transparent-btn" title="Open list">
                                    <span class="sr-only">Open list</span>
                                    <span class="icon arrow-down" aria-hidden="true"></span>
                                </span>
                            </a>
                            <ul class="cat-sub-menu">
                                <li>
                                    <a asp-controller="LoaiDichVuKhacs" asp-action="Index"> Thể Loại</a>
                                </li>
                                <li>
                                    <a asp-controller="SanPhamDichVuKhacs" asp-action="Index">Quản Lý Dịch Vụ</a>
                                </li>
                                <li>
                                    <a asp-controller="GoiDangKyDichVuKhacs" asp-action="Index">Gói Đăng Ký</a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <a class="show-cat-btn" href="##">
                                <span class="icon folder" aria-hidden="true"></span>Quản lý Tin Tức
                                <span class="category__btn transparent-btn" title="Open list">
                                    <span class="sr-only">Open list</span>
                                    <span class="icon arrow-down" aria-hidden="true"></span>
                                </span>
                            </a>
                            <ul class="cat-sub-menu">
                                <li>
                                    <a asp-controller="ChuDes" asp-action="Index">Chủ Đề</a>
                                </li>
                                <li>
                                    <a asp-controller="TinTucs" asp-action="Index">Tin Tức</a>
                                </li>
                                <li>
                                    <a asp-controller="BinhLuanBaiViets" asp-action="Index">Bình Luận</a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <a class="show-cat-btn" href="##">
                                <span class="icon paper" aria-hidden="true"></span>Đơn Đăng Ký
                                <span class="category__btn transparent-btn" title="Open list">
                                    <span class="sr-only">Open list</span>
                                    <span class="icon arrow-down" aria-hidden="true"></span>
                                </span>
                            </a>
                            <ul class="cat-sub-menu">
                                <li>
                                    <a asp-controller="HoaDonSims" asp-action="Index">Đăng Ký Sim</a>
                                </li>
                                <li>
                                    <a asp-controller="HoaDonDichVus" asp-action="Index">Dịch Vụ Di Động</a>
                                </li>
                                <li>
                                    <a asp-controller="HoaDonDoanhNghieps" asp-action="Index">Dịch Vụ Doanh Nghiệp</a>
                                </li>
                                <li>
                                    <a asp-controller="HoaDonDichVuKhacs" asp-action="Index">Dịch Vụ Khác</a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <a href="comments.html">
                                <span class="icon message" aria-hidden="true"></span>
                                Liên Hệ
                            </a>
                            <span class="msg-counter">7</span>
                        </li>
                    </ul>

                </div>
            </div>
            <div class="sidebar-footer">
                <a href="##" class="sidebar-user">
                    <span class="sidebar-user-img">
                        <picture><source srcset="./img/avatar/avatar-illustrated-01.webp" type="image/webp"><img src="~/img/avatar/avatar-illustrated-01.png" alt="User name"></picture>
                    </span>
                    <div class="sidebar-user-info">
                        <span class="sidebar-user__title">Đặng Minh Nhựt</span>
                        <span class="sidebar-user__subtitle">Quản lý hỗ trợ</span>
                    </div>
                </a>
            </div>
        </aside>

        <div class="main-wrapper">
            <!-- ! Main nav -->
            <nav class="main-nav--bg">
                <div class="container main-nav">
                    <div class="main-nav-start">
                        <div class="search-wrapper">
                            <i data-feather="search" aria-hidden="true"></i>
                            <input type="text" placeholder="Enter keywords ..." required>
                        </div>
                    </div>
                    <div class="main-nav-end">
                        <button class="sidebar-toggle transparent-btn" title="Menu" type="button">
                            <span class="sr-only">Toggle menu</span>
                            <span class="icon menu-toggle--gray" aria-hidden="true"></span>
                        </button>

                        <button class="theme-switcher gray-circle-btn" type="button" title="Switch theme">
                            <span class="sr-only">Switch theme</span>
                            <i class="sun-icon" data-feather="sun" aria-hidden="true"></i>
                            <i class="moon-icon" data-feather="moon" aria-hidden="true"></i>
                        </button>
                        <div class="notification-wrapper">
                            <button class="gray-circle-btn dropdown-btn" title="To messages" type="button">
                                <span class="sr-only">To messages</span>
                                <span class="icon notification active" aria-hidden="true"></span>
                            </button>
                            <ul class="users-item-dropdown notification-dropdown dropdown">
                                <li>
                                    <a href="##">
                                        <div class="notification-dropdown-icon info">
                                            <i data-feather="check"></i>
                                        </div>
                                        <div class="notification-dropdown-text">
                                            <span class="notification-dropdown__title">System just updated</span>
                                            <span class="notification-dropdown__subtitle">
                                                The system has been successfully upgraded. Read more
                                                here.
                                            </span>
                                        </div>
                                    </a>
                                </li>
                                <li>
                                    <a href="##">
                                        <div class="notification-dropdown-icon danger">
                                            <i data-feather="info" aria-hidden="true"></i>
                                        </div>
                                        <div class="notification-dropdown-text">
                                            <span class="notification-dropdown__title">The cache is full!</span>
                                            <span class="notification-dropdown__subtitle">
                                                Unnecessary caches take up a lot of memory space and
                                                interfere ...
                                            </span>
                                        </div>
                                    </a>
                                </li>
                                <li>
                                    <a href="##">
                                        <div class="notification-dropdown-icon info">
                                            <i data-feather="check" aria-hidden="true"></i>
                                        </div>
                                        <div class="notification-dropdown-text">
                                            <span class="notification-dropdown__title">New Subscriber here!</span>
                                            <span class="notification-dropdown__subtitle">A new subscriber has subscribed.</span>
                                        </div>
                                    </a>
                                </li>
                                <li>
                                    <a class="link-to-page" href="##">Go to Notifications page</a>
                                </li>
                            </ul>
                        </div>
                        <div class="nav-user-wrapper">
                            @if (ViewBag.UserName != null)
                            {
                                <button class="nav-user-btn dropdown-btn" title="Hồ sơ của tôi" type="button">
                                    <span class="sr-only">Hồ sơ của tôi</span>
                                    <span class="nav-user-img">
                                        <picture>
                                            <source srcset="~/img/user/@ViewBag.UserAvatar" type="image/webp">
                                            <img src="~/img/user/@ViewBag.UserAvatar" alt="@ViewBag.UserName">
                                        </picture>
                                    </span>
                                </button>
                                <ul class="users-item-dropdown nav-user-dropdown dropdown">
                                    <li>
                                        <a asp-controller="NguoiDung" asp-action="HoSoNguoiDung">
                                            <i data-feather="user" aria-hidden="true"></i>
                                            <span>Hồ Sơ</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a asp-controller="DangNhap" asp-action="DangXuat" class="danger">
                                            <i data-feather="log-out" aria-hidden="true"></i>
                                            <span>Đăng Xuất</span>
                                        </a>
                                    </li>
                                </ul>

                            }
                            else
                            {
                                <div class="d-flex gap-2">
                                    <a asp-controller="DangNhap" asp-action="DangNhap"
                                       class="btn btn-primary rounded-pill px-3 py-2 d-flex align-items-center">
                                        <i class="bi bi-person me-2"></i> Đăng nhập
                                    </a>
                                </div>
                            }

                        </div>
                    </div>
                </div>
            </nav>
            <!-- ! Main -->
            <main class="main users chart-page" id="skip-target">
                <div class="container">
                    <div>
                        @RenderBody()
                    </div>
                </div>
            </main>
            <!-- ! Footer -->
            <footer class="footer">
                <div class="container footer--flex">
                    <div class="footer-start">
                        <p>
                            2021 © Elegant Dashboard - <a href="elegant-dashboard.com" target="_blank"
                                                          rel="noopener noreferrer">elegant-dashboard.com</a>
                        </p>
                    </div>
                    <ul class="footer-end">
                        <li><a href="##">About</a></li>
                        <li><a href="##">Support</a></li>
                        <li><a href="##">Puchase</a></li>
                    </ul>
                </div>
            </footer>
        </div>

        <!-- Chart library -->
        
        <script src="~/admin/plugins/chart.min.js"></script>
        <!-- Icons library -->
        <script src="~/admin/plugins/feather.min.js"></script>

        <!-- Custom scripts -->
        <script src="~/admin/js/script.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation/1.19.3/jquery.validate.min.js"></script>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
