<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mobifone Dashboard | Dashboard</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebsiteQLDichVuMobiFone.styles.css" asp-append-version="true" />
    <!-- Favicon -->

    <link rel="shortcut icon" href="~/img/logo/logo-1.png" type="image/x-icon">
    <!-- Custom styles -->
    <link href="~/admin/css/style.css" rel="stylesheet" />
    <link href="~/admin/css/style.min.css" rel="stylesheet" />
    <a href="~/admin/css/style.min.css.map"></a>
    <!-- Thêm Chart.js từ CDN -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

    <script src="https://cdn.ckeditor.com/4.20.2/full/ckeditor.js"></script>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 10px;
            margin-bottom: 10px;
        }

        th, td {
            border: 1px solid #ccc;
            padding: 8px;
            text-align: center;
        }

        th {
            background-color: #f8f9fa;
            font-weight: bold;
        }

        td {
            font-size: 14px;
        }

        .bg-light {
            background-color: #f5f5f5 !important;
        }
    </style>

</head>
<body class="sb-nav-fixed">
    <div class="layer"></div>
    <!-- ! Body -->
    <a class="skip-link sr-only" href="#skip-target">Skip to content</a>
    <div class="page-flex">
        <!-- ! Sidebar -->
        <aside class="sidebar">
            <div class="sidebar-start">
                <div class="sidebar-head">
                    <a href="/" class="logo-wrapper" title="Home">
                        <span class="sr-only">Home</span>
                        <!-- Thay <span> bằng <img> để chèn logo dưới dạng hình ảnh -->
                        <img src="~/img/logo/logo2.jfif" id="img-logomobifone" alt="Mobifone Logo" class="icon logo" />
                        <div class="logo-text">
                            <span class="logo-title">Mobifone</span>
                            <span class="logo-subtitle">Dashboard</span>
                        </div>
                    </a>
                    <button class="sidebar-toggle transparent-btn" title="Menu" type="button">
                        <span class="sr-only">Toggle menu</span>
                        <i class="bi bi-list fs-3 text-white menu-toggle" aria-hidden="true"></i>

                    </button>
                </div>
                <div class="sidebar-body">
                    <ul class="sidebar-body-menu">
                        <li>
                            <a class="active" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-speedometer2 me-1"></i>Bảng Điều Khiển
                            </a>
                        </li>
                        <li>
                            <a asp-controller="NguoiDungs" asp-action="Index">
                                <i class="bi bi-people-fill me-1 text-white"></i> Quản Lý Người Dùng
                            </a>
                        </li>

                        <!-- Các menu có submenu -->
                        <li>
                            <a class="show-cat-btn d-flex justify-content-between align-items-center toggle-cat-btn" href="#">
                                <div><i class="bi bi-sim  me-1 text-white"></i> Quản Lý SIM</div>
                                <i class="arrow-icon bi bi-chevron-right text-white"></i>
                            </a>
                            <ul class="cat-sub-menu">
                                <li><a asp-controller="LoaiSoes" asp-action="Index"> Thể Loại Sim</a></li>
                                <li><a asp-controller="Sims" asp-action="Index">Sim</a></li>
                            </ul>
                        </li>

                        <li>
                            <a class="show-cat-btn d-flex justify-content-between align-items-center toggle-cat-btn" href="#">
                                <div><i class="bi bi-phone me-1 text-white"></i> Dịch Vụ Di Động</div>
                                <i class="arrow-icon bi bi-chevron-right text-white"></i>
                            </a>
                            <ul class="cat-sub-menu" style="display: none;">
                                <li><a asp-controller="LoaiDichVuDiDongs" asp-action="Index"> Thể Loại</a></li>
                                <li><a asp-controller="LoaiGoiDangKies" asp-action="Index">Quản Lý Dịch Vụ</a></li>
                                <li><a asp-controller="GoiDangKies" asp-action="Index">Quản Lý Gói</a></li>
                            </ul>
                        </li>

                        <li>
                            <a class="show-cat-btn d-flex justify-content-between align-items-center toggle-cat-btn" href="#">
                                <div><i class="bi bi-building me-1 text-white"></i> Dịch Vụ Doanh Nghiệp</div>
                                <i class="arrow-icon bi bi-chevron-right text-white"></i>
                            </a>
                            <ul class="cat-sub-menu" style="display: none;">
                                <li><a asp-controller="NhomDichVuDoanhNghieps" asp-action="Index"> Thể Loại</a></li>
                                <li><a asp-controller="DichVuDoanhNghieps" asp-action="Index">Quản Lý Dịch Vụ</a></li>
                                <li><a asp-controller="GoiDichVus" asp-action="Index">Gói Dịch Vụ</a></li>
                            </ul>
                        </li>

                        <li>
                            <a class="show-cat-btn d-flex justify-content-between align-items-center toggle-cat-btn" href="#">
                                <div><i class="bi bi-folder me-1 text-white"></i> Dịch Vụ Khác</div>
                                <i class="arrow-icon bi bi-chevron-right text-white"></i>
                            </a>
                            <ul class="cat-sub-menu" style="display: none;">
                                <li><a asp-controller="LoaiDichVuKhacs" asp-action="Index"> Thể Loại</a></li>
                                <li><a asp-controller="SanPhamDichVuKhacs" asp-action="Index">Quản Lý Dịch Vụ</a></li>
                                <li><a asp-controller="GoiDangKyDichVuKhacs" asp-action="Index">Gói Đăng Ký</a></li>
                            </ul>
                        </li>

                        <li>
                            <a class="show-cat-btn d-flex justify-content-between align-items-center toggle-cat-btn" href="#">
                                <div><i class="bi bi-newspaper me-1 text-white"></i> Quản Lý Tin Tức</div>
                                <i class="arrow-icon bi bi-chevron-right text-white"></i>
                            </a>
                            <ul class="cat-sub-menu" style="display: none;">
                                <li><a asp-controller="ChuDes" asp-action="Index">Chủ Đề</a></li>
                                <li><a asp-controller="TinTucs" asp-action="Index">Tin Tức</a></li>
                                <li><a asp-controller="BinhLuanBaiViets" asp-action="Index">Bình Luận</a></li>
                            </ul>
                        </li>

                        <li>
                            <a class="show-cat-btn d-flex justify-content-between align-items-center toggle-cat-btn" href="#">
                                <div><i class="bi bi-file-earmark me-1 text-white"></i> Quản Lý Đơn Hàng</div>
                                <i class="arrow-icon bi bi-chevron-right text-white"></i>
                            </a>
                            <ul class="cat-sub-menu" style="display: none;">
                                <li><a asp-controller="GiaoDichNapTiens" asp-action="Index">Đơn Nạp Tiền Sim</a></li>
                                <li><a asp-controller="HoaDonSims" asp-action="Index">Đơn Đăng Ký Sim</a></li>
                                <li><a asp-controller="HoaDonDichVus" asp-action="Index">Dịch Vụ Di Động</a></li>
                                <li><a asp-controller="HoaDonDoanhNghieps" asp-action="Index">Dịch Vụ Doanh Nghiệp</a></li>
                                <li><a asp-controller="HoaDonDichVuKhacs" asp-action="Index">Dịch Vụ Khác</a></li>
                            </ul>
                        </li>

                        <li>
                            <a asp-controller="LienHes" asp-action="Index">
                                <i class="bi bi-envelope me-1 text-white"></i> Liên Hệ
                            </a>
                            @{
                                int soLienHe = Context.Session.GetInt32("SoLienHeChuaXuLy") ?? 0;
                            }
                            <span class="msg-counter">@soLienHe</span>
                        </li>
                    </ul>

                </div>
            </div>
            <div class="sidebar-footer">
                <a href="##" class="sidebar-user">
                    <span class="sidebar-user-img">
                        <img src="~/img/user/user.jpg"  alt="User name" />
                    </span>
                    <div class="sidebar-user-info">
                        <span class="sidebar-user__title">Đặng Minh Nhựt</span>
                        <span class="sidebar-user__subtitle">Quản lý hỗ trợ</span>
                    </div>
                </a>
            </div>
        </aside>

        <div class="main-wrapper">
            <!-- ! Main nav -->
            <nav class="main-nav--bg">
                <div class="container main-nav">
                    <div class="main-nav-start">
                        <div class="search-wrapper">
                            <i data-feather="search" aria-hidden="true"></i>
                            <input type="text" placeholder="Enter keywords ..." required>
                        </div>
                    </div>
                    <div class="main-nav-end">
                        <button class="sidebar-toggle transparent-btn" title="Menu" type="button">
                            <span class="sr-only">Toggle menu</span>
                            <span class="icon menu-toggle--gray" aria-hidden="true"></span>
                        </button>

                        <button class="theme-switcher gray-circle-btn" type="button" title="Switch theme">
                            <span class="sr-only">Switch theme</span>
                            <i class="sun-icon" data-feather="sun" aria-hidden="true"></i>
                            <i class="moon-icon" data-feather="moon" aria-hidden="true"></i>
                        </button>
                        <div class="notification-wrapper position-relative me-3">
                            <button class="gray-circle-btn dropdown-btn position-relative" title="Thông báo liên hệ" type="button">
                                <i class="bi bi-bell fs-5 text-white" aria-hidden="true"></i>

                                @* Chấm đỏ nằm trong và trên cái icon chuông thông báo *@
                                @if (ViewBag.SoLienHeChuaXuLy > 0)
                                {
                                    <span class="position-absolute top-0 start-100 translate-middle p-1 bg-danger border border-light rounded-circle" style="font-size: 0.6rem;">
                                        <span class="visually-hidden">Liên hệ chưa xử lý</span>
                                    </span>
                                }
                            </button>


                            <ul class="users-item-dropdown notification-dropdown dropdown">
                                <li class="dropdown-header fw-bold">Thông báo</li>

                                @if (ViewBag.SoLienHeChuaXuLy > 0)
                                {
                                    <li>
                                        <a asp-controller="LienHes" asp-action="Index">
                                            <div class="notification-dropdown-icon danger">
                                                <i class="bi bi-envelope-exclamation"></i>
                                            </div>
                                            <div class="notification-dropdown-text">
                                                <span class="notification-dropdown__title">Có @ViewBag.SoLienHeChuaXuLy liên hệ chưa xử lý</span>
                                                <span class="notification-dropdown__subtitle">Nhấn để xử lý ngay</span>
                                            </div>
                                        </a>
                                    </li>
                                }
                                else
                                {
                                    <li>
                                        <a href="#">
                                            <div class="notification-dropdown-icon success">
                                                <i class="bi bi-check-circle"></i>
                                            </div>
                                            <div class="notification-dropdown-text">
                                                <span class="notification-dropdown__title">Không có liên hệ mới</span>
                                                <span class="notification-dropdown__subtitle">Mọi liên hệ đã được xử lý</span>
                                            </div>
                                        </a>
                                    </li>
                                }

                                <li>
                                    <a class="link-to-page" asp-controller="LienHes" asp-action="Index" >Xem tất cả liên hệ</a>
                                </li>
                            </ul>
                        </div>

                        <div class="nav-user-wrapper">
                            @if (ViewBag.UserName != null)
                            {
                                <button class="nav-user-btn dropdown-btn" title="Hồ sơ của tôi" type="button">
                                    <span class="sr-only">Hồ sơ của tôi</span>
                                    <span class="nav-user-img">
                                        <picture>
                                            <source srcset="~/img/user/@ViewBag.UserAvatar" type="image/webp">
                                            <img src="~/img/user/@ViewBag.UserAvatar" alt="@ViewBag.UserName">
                                        </picture>
                                    </span>
                                </button>
                                <ul class="users-item-dropdown nav-user-dropdown dropdown">
                                    <li>
                                        <a asp-controller="NguoiDung" asp-action="HoSoNguoiDung">
                                            <i data-feather="user" aria-hidden="true"></i>
                                            <span>Hồ Sơ</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a asp-controller="DangNhap" asp-action="DangXuat" class="danger">
                                            <i data-feather="log-out" aria-hidden="true"></i>
                                            <span>Đăng Xuất</span>
                                        </a>
                                    </li>
                                </ul>

                            }
                            else
                            {
                                <div class="d-flex gap-2">
                                    <a asp-controller="DangNhap" asp-action="DangNhap"
                                       class="btn btn-primary rounded-pill px-3 py-2 d-flex align-items-center">
                                        <i class="bi bi-person me-2"></i> Đăng nhập
                                    </a>
                                </div>
                            }

                        </div>
                    </div>
                </div>
            </nav>
            <!-- ! Main -->
            <main class="main users chart-page" id="skip-target">
                <div class="container">
                    <div>
                        @RenderBody()
                    </div>
                </div>
            </main>
            <!-- ! Footer -->
            <footer class="footer">
                <div class="container footer--flex">
                    <div class="footer-start">
                        <p>
                            2021 © Elegant Dashboard - <a href="elegant-dashboard.com" target="_blank"
                                                          rel="noopener noreferrer">elegant-dashboard.com</a>
                        </p>
                    </div>
                    <ul class="footer-end">
                        <li><a href="##">About</a></li>
                        <li><a href="##">Support</a></li>
                        <li><a href="##">Puchase</a></li>
                    </ul>
                </div>
            </footer>
        </div>

        <!-- Chart library -->

        <script src="~/admin/plugins/chart.min.js"></script>
        <!-- Icons library -->
        <script src="~/admin/plugins/feather.min.js"></script>

        <!-- Custom scripts -->
        <script src="~/admin/js/script.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation/1.19.3/jquery.validate.min.js"></script>


        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                const toggleButtons = document.querySelectorAll(".toggle-cat-btn");

                toggleButtons.forEach(btn => {
                    btn.addEventListener("click", function (e) {
                        e.preventDefault();

                        const subMenu = btn.nextElementSibling;
                        const arrowIcon = btn.querySelector(".arrow-icon");

                        if (subMenu && subMenu.classList.contains("cat-sub-menu")) {
                            const isVisible = subMenu.style.display === "block";
                            subMenu.style.display = isVisible ? "none" : "block";
                            arrowIcon.classList.toggle("bi-chevron-right", isVisible);
                            arrowIcon.classList.toggle("bi-chevron-down", !isVisible);
                        }
                    });
                });
            });
        </script>

        @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
