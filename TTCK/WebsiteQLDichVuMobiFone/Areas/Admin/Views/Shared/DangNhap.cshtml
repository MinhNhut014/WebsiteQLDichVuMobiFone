
@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="row justify-content-center">
    <div class="col-sm-6 col-md-4">
        <div class="p-4 shadow rounded" style="background-color: #fff;">
            <h3 class="text-center" style="color: #000;">ĐĂNG NHẬP</h3>
            <form method="post" asp-action="dangNhap">
                <div class="my-3">
                    <input class="form-control border-dark" type="text" name="username" placeholder="Email" required>
                </div>
                <div class="my-3">
                    <input class="form-control border-dark" type="password" name="password" placeholder="Mật khẩu" required>
                </div>
                <div class="d-grid my-4">
                    <input class="btn btn-dark btn-block" type="submit" value="Đăng nhập">
                </div>
            </form>
            <div class="my-3 text-center">
                <span style="color: #333;">Chưa có tài khoản? </span>
                <a asp-action="dangKy" class="text-decoration-none" style="color: #000; font-weight: 500;">Đăng ký</a>
            </div>
        </div>
    </div>
</div>
