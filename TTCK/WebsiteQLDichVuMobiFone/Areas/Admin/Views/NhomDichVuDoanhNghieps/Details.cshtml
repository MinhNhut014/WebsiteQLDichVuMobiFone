@model WebsiteQLDichVuMobiFone.Models.NhomDichVuDoanhNghiep

@{
    ViewData["Title"] = "Chi Tiết Nhóm Dịch Vụ Doanh Nghiệp";
}

<div class="container mt-4">
    <div class="card shadow-lg rounded-4 p-4 border-0">
        <h1 class="text-primary fw-bold">Chi Tiết Nhóm Dịch Vụ Doanh Nghiệp</h1>
        <hr />

        <div class="mb-4">
            <h4 class="text-secondary"><i class="fas fa-info-circle"></i> Thông tin nhóm</h4>
            <dl class="row">
                <dt class="col-sm-4 text-dark fw-bold">Tên Nhóm</dt>
                <dd class="col-sm-8">@Model.TenNhom</dd>

                <dt class="col-sm-4 text-dark fw-bold">Loại Dịch Vụ</dt>
                <dd class="col-sm-8">@Model.IddichVuNavigation?.TenDichVu</dd>
            </dl>
        </div>

        <h4 class="text-secondary"><i class="fas fa-list"></i> Danh sách dịch vụ doanh nghiệp</h4>

        @if (Model.DichVuDoanhNghieps != null && Model.DichVuDoanhNghieps.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="bg-primary text-white">
                        <tr>
                            <th>Tên Dịch Vụ</th>
                            <th>Thao Tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var dichVu in Model.DichVuDoanhNghieps)
                        {
                            <tr>
                                <td>@dichVu.TenDichVu</td>
                                <td>
                                    <a asp-action="Details"
                                       asp-controller="DichVuDoanhNghieps"
                                       asp-route-id="@dichVu.IddichVuDn"
                                       class="btn btn-outline-primary btn-sm">
                                        <i class="fa-solid fa-eye"></i> Xem chi tiết
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <p class="text-muted">Không có dịch vụ doanh nghiệp nào thuộc nhóm này.</p>
        }

        <div class="mt-4">
            <a asp-action="Edit"
               asp-route-id="@Model.IdnhomDichVu"
               class="btn btn-warning rounded-pill px-4">
                <i class="fas fa-edit"></i> Sửa
            </a>
            <a asp-action="Index"
               class="btn btn-secondary rounded-pill px-4">
                <i class="fas fa-arrow-left"></i> Quay lại
            </a>
        </div>
    </div>
</div>
