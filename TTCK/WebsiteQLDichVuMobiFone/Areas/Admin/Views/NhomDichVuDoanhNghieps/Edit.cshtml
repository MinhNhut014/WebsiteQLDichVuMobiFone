@model WebsiteQLDichVuMobiFone.Models.NhomDichVuDoanhNghiep

@{
    ViewData["Title"] = "Chỉnh Sửa Nhóm Dịch Vụ Doanh Nghiệp";
}

<div class="container mt-4">
    <h2 class="text-primary mb-3">Chỉnh Sửa Nhóm Dịch Vụ Doanh Nghiệp</h2>
    <div class="card shadow-sm p-4 rounded">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- ID nhóm dịch vụ (Ẩn) -->
            <input type="hidden" asp-for="IdnhomDichVu" />

            <!-- Loại dịch vụ (Ẩn & Mặc định là 3) -->
            <input type="hidden" asp-for="IddichVu" value="3" />

            <!-- Nhập Tên Nhóm -->
            <div class="form-group mb-3">
                <label asp-for="TenNhom" class="fw-bold">Tên Nhóm</label>
                <input asp-for="TenNhom" class="form-control" placeholder="Nhập tên nhóm dịch vụ..." required />
                <span asp-validation-for="TenNhom" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fa-solid fa-arrow-left"></i> Quay lại
                </a>
                <button type="submit" class="btn btn-success">
                    <i class="fa-solid fa-check"></i> Lưu
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
