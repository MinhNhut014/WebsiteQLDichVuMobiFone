@model WebsiteQLDichVuMobiFone.Models.HoaDonDichVu

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-primary">Tạo Hóa Đơn Dịch Vụ</h1>

<div class="card shadow-lg p-4">
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="IdnguoiDung" class="form-label fw-bold"></label>
                <select asp-for="IdnguoiDung" class="form-control border-primary" asp-items="ViewBag.IdnguoiDung"></select>
            </div>

            <div class="form-group mb-3">
                <label asp-for="IdtrangThai" class="form-label fw-bold"></label>
                <select asp-for="IdtrangThai" class="form-control border-primary" asp-items="ViewBag.IdtrangThai"></select>
            </div>

            <div class="form-group mb-3">
                <label asp-for="TenKhachHang" class="form-label fw-bold"></label>
                <input asp-for="TenKhachHang" class="form-control border-primary" />
                <span asp-validation-for="TenKhachHang" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="SoDienThoai" class="form-label fw-bold"></label>
                <input asp-for="SoDienThoai" class="form-control border-primary" />
                <span asp-validation-for="SoDienThoai" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Email" class="form-label fw-bold"></label>
                <input asp-for="Email" class="form-control border-primary" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="DiaChi" class="form-label fw-bold"></label>
                <input asp-for="DiaChi" class="form-control border-primary" />
                <span asp-validation-for="DiaChi" class="text-danger"></span>
            </div>

            <div class="form-group text-center">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="fas fa-check-circle"></i> Tạo Hóa Đơn
                </button>
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Quay lại
    </a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
