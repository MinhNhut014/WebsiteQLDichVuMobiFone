@model WebsiteQLDichVuMobiFone.Models.LoaiGoiDangKy

@{
    ViewData["Title"] = "Chi Tiết Loại Gói Đăng Ký";
}

<div class="container mt-4">
    <div class="card shadow-lg rounded-4 p-4 border-0">
        <h1 class="text-primary fw-bold text-center">Chi Tiết Loại Gói Đăng Ký</h1>
        <hr class="my-4" />

        <div class="mb-4">
            <h4 class="text-secondary"><i class="fas fa-info-circle"></i> Thông tin chi tiết</h4>
            <div class="p-3 bg-light rounded">
                <p class="mb-2"><strong class="text-dark">Tên Loại Gói:</strong> @Model.TenLoaiGoi</p>
                <p class="mb-2"><strong class="text-dark">Loại Dịch Vụ:</strong> @Model.IdloaiDichVuNavigation.TenLoaiDichVu</p>
            </div>
        </div>

        <h4 class="text-secondary"><i class="fas fa-list"></i> Danh sách các Gói Đăng Ký</h4>
        @if (Model.GoiDangKies != null && Model.GoiDangKies.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle">
                    <thead class="bg-primary text-white">
                        <tr>
                            <th>Tên Gói</th>
                            <th>Giá</th>
                            <th>Thời gian sử dụng</th>
                            <th>Chi tiết</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var goi in Model.GoiDangKies)
                        {
                            <tr>
                                <td>@goi.TenGoi</td>
                                <td>
                                    <span class="badge bg-success p-2">
                                        @goi.GiaGoi VNĐ
                                    </span>
                                </td>
                                <td>
                                    <span class="badge bg-info p-2">
                                        @goi.ThoiHan ngày
                                    </span>
                                </td>
                                <td>
                                    <a asp-action="Details"
                                       asp-controller="GoiDangKies"
                                       asp-route-id="@goi.IdgoiDangKy"
                                       class="btn btn-outline-primary btn-sm">
                                        <i class="fa-solid fa-eye"></i> Xem chi tiết
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <p class="text-muted text-center">Không có gói đăng ký nào thuộc loại này.</p>
        }

        <div class="mt-4 text-center">
            <a asp-action="Edit"
               asp-route-id="@Model.IdloaiGoi"
               class="btn btn-warning rounded-pill px-4">
                <i class="fas fa-edit"></i> Sửa
            </a>
            <a asp-action="Index"
               class="btn btn-secondary rounded-pill px-4">
                <i class="fas fa-arrow-left"></i> Quay lại
            </a>
        </div>
    </div>
</div>
