@model WebsiteQLDichVuMobiFone.Models.LoaiGoiDangKy

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-5">
    <div class="card shadow-lg rounded-3 border-0">
        <div class="card-header bg-primary text-white text-center">
            <h3 class="m-0">Thêm Loại Gói Đăng Ký</h3>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-3">
                    <label asp-for="TenLoaiGoi" class="form-label fw-bold"></label>
                    <input asp-for="TenLoaiGoi" class="form-control" placeholder="Nhập tên loại gói..." />
                    <span asp-validation-for="TenLoaiGoi" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="IdloaiDichVu" class="form-label fw-bold"></label>
                    <select asp-for="IdloaiDichVu" class="form-select" asp-items="ViewBag.IdloaiDichVu">
                        <option value="">-- Chọn loại dịch vụ --</option>
                    </select>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">Quay lại</a>
                    <button type="submit" class="btn btn-success">Thêm mới</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
