@model WebsiteQLDichVuMobiFone.Models.GoiDichVu

@{
    ViewData["Title"] = "Chi Tiết Gói Dịch Vụ";
}

<div class="container mt-4">
    <div class="card shadow-lg rounded-4 p-4">
        <h2 class="text-primary text-center fw-bold">
            <i class="fas fa-file-alt"></i> Chi Tiết Gói Dịch Vụ
        </h2>
        <hr />
        <div class="row">
            <div class="col-md-4 text-center">
                <img src="~/img/dichvu/doanhnghiep/@Model.HinhAnh" class="img-fluid rounded-3 shadow-sm" alt="Ảnh gói dịch vụ" style="max-width: 100%; height: auto;">
            </div>
            <div class="col-md-8">
                <h3 class="fw-bold">@Model.TenGoiDv</h3>
                </br>
                <h6><strong>📂 Danh mục:</strong> @Model.IddichVuDnNavigation?.TenDichVu</h6>
                </br>
                <h6><strong>📜 Mô Tả:</strong> @Model.MoTa</h6>
            </div>
        </div>

        <div class="card bg-light mt-4 p-3 border-0 shadow-sm rounded-3">
            <h4 class="fw-bold text-dark">
                <i class="fas fa-info-circle"></i> Thông Tin Chi Tiết
            </h4>
            <div class="mt-2 p-2 border rounded bg-white">
                @Html.Raw(Model.ThongTinChiTiet)
            </div>
        </div>

        <div class="mt-4 text-center">
            <a asp-action="Index" class="btn btn-secondary rounded-3 shadow-sm">
                <i class="fas fa-arrow-left"></i> Quay lại danh sách
            </a>
            <a asp-action="Edit" asp-route-id="@Model.IdgoiDichVu" class="btn btn-primary rounded-3 shadow-sm">
                <i class="fas fa-edit"></i> Chỉnh sửa
            </a>
        </div>
    </div>
</div>