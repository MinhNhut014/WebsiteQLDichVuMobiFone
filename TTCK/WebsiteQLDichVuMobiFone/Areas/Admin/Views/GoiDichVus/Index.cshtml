@model IEnumerable<WebsiteQLDichVuMobiFone.Models.GoiDichVu>

@{
    ViewData["Title"] = "Danh sách Gói Dịch Vụ";
}

<h1 class="mb-4 text-primary fw-bold">Danh sách Gói Dịch Vụ</h1>

<p>
    <a asp-action="Create" class="btn btn-primary shadow-sm px-4">
        <i class="fa-solid fa-plus"></i> Thêm mới
    </a>
</p>

<div class="table-responsive">
    <table class="table table-hover table-bordered align-middle shadow-sm rounded-3 overflow-hidden">
        <thead class="bg-gradient bg-primary text-white text-center">
            <tr>
                <th class="p-3">Tên Gói</th>
                <th class="p-3">Hình Ảnh</th>
                <th class="p-3">Mô Tả</th>
                <th class="p-3">ID Dịch Vụ DN</th>
                <th class="p-3">Hành động</th>
            </tr>
        </thead>
        <tbody class="bg-light">
            @foreach (var item in Model)
            {
                <tr class="text-center border-bottom">
                    <td class="p-3 text-start fw-medium"><img src="~/img/dichvu/doanhnghiep/@item.TenGoiDv" /></td>
                    <td class="p-3">@Html.DisplayFor(modelItem => item.HinhAnh)</td>
                    <td class="p-3">@Html.DisplayFor(modelItem => item.MoTa)</td>
                    <td class="p-3">@Html.DisplayFor(modelItem => item.IddichVuDnNavigation.TenDichVu)</td>
                    <td class="p-3 d-flex justify-content-center">
                        <a asp-action="Edit" asp-route-id="@item.IdgoiDichVu" class="btn btn-warning btn-sm rounded-circle shadow-sm mx-1">
                            <i class="fa-solid fa-pen"></i>
                        </a>
                        <a asp-action="Details" asp-route-id="@item.IdgoiDichVu" class="btn btn-info btn-sm text-white rounded-circle shadow-sm mx-1">
                            <i class="fa-solid fa-eye"></i>
                        </a>
                        <form asp-action="Delete" method="post" class="d-inline" onsubmit="return confirm('Bạn có chắc muốn xóa không?')">
                            <input type="hidden" name="id" value="@item.IdgoiDichVu" />
                            <button type="submit" class="btn btn-danger btn-sm rounded-circle shadow-sm mx-1">
                                <i class="fa-solid fa-trash"></i>
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
