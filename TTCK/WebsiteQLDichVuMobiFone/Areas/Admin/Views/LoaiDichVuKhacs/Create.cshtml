@model WebsiteQLDichVuMobiFone.Models.LoaiDichVuKhac

@{
    ViewData["Title"] = "Thêm Loại Dịch Vụ Khác";
}

<div class="container mt-4">
    <h2 class="text-primary mb-3">Thêm Loại Dịch Vụ Khác</h2>
    <div class="card shadow-sm p-4 rounded">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Chọn Dịch Vụ -->
            <!-- Ẩn ID Dịch Vụ (Mặc định = 4) -->
            <input type="hidden" asp-for="IddichVu" value="4" />

            <!-- Nhập Tên Loại Dịch Vụ -->
            <div class="form-group mb-3">
                <label asp-for="TenLoaiDichVu" class="fw-bold">Tên Loại Dịch Vụ</label>
                <input asp-for="TenLoaiDichVu" class="form-control" placeholder="Nhập tên loại dịch vụ..." required />
                <span asp-validation-for="TenLoaiDichVu" class="text-danger"></span>
            </div>

            <!-- Nút Lưu và Quay lại -->
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-success">
                    <i class="fa-solid fa-check"></i> Lưu
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fa-solid fa-arrow-left"></i> Quay lại
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
