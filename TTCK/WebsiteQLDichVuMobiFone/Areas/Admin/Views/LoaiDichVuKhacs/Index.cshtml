@model IEnumerable<WebsiteQLDichVuMobiFone.Models.LoaiDichVuKhac>

@{
    ViewData["Title"] = "Danh sách Loại Dịch Vụ Khác";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="text-primary fw-bold m-0">Danh sách Loại Dịch Vụ Khác</h1>
    <a asp-action="Create" class="btn btn-primary shadow-sm px-4">
        <i class="fa-solid fa-plus"></i> Thêm mới
    </a>
</div>

<div class="table-responsive">
    <table class="table table-hover table-striped table-bordered align-middle shadow-sm rounded-3 overflow-hidden">
        <thead class="bg-gradient bg-primary text-white text-center">
            <tr>
                <th class="p-3">Tên Loại Dịch Vụ</th>
                <th class="p-3">ID Dịch Vụ</th>
                <th class="p-3">Hành động</th>
            </tr>
        </thead>
        <tbody class="bg-light">
            @foreach (var item in Model)
            {
                <tr class="text-center border-bottom">
                    <td class="p-3 text-start fw-medium">@Html.DisplayFor(modelItem => item.TenLoaiDichVu)</td>
                    <td class="p-3">@Html.DisplayFor(modelItem => item.IddichVuNavigation.IddichVu)</td>
                    <td class="p-3 d-flex justify-content-center gap-2">
                        <a asp-action="Edit" asp-route-id="@item.IdloaiDichVuKhac" class="btn btn-warning btn-sm rounded-circle shadow-sm">
                            <i class="fa-solid fa-pen"></i>
                        </a>
                        <a asp-action="Details" asp-route-id="@item.IdloaiDichVuKhac" class="btn btn-info btn-sm text-white rounded-circle shadow-sm">
                            <i class="fa-solid fa-eye"></i>
                        </a>
                        <a href="javascript:void(0);" onclick="confirmDelete(@item.IdloaiDichVuKhac, '@item.TenLoaiDichVu')"
                           class="btn btn-danger btn-sm rounded-circle shadow-sm">
                            <i class="fa-solid fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    function confirmDelete(id, tenLoaiDichVu) {
        Swal.fire({
            title: "Bạn có chắc chắn?",
            text: "Bạn có chắc chắn muốn xóa '" + tenLoaiDichVu + "' không?",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#d33",
            cancelButtonColor: "#3085d6",
            confirmButtonText: "Xóa ngay!",
            cancelButtonText: "Hủy"
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = "/Admin/LoaiDichVuKhacs/DeleteConfirmed/" + id;
            }
        });
    }
</script>
