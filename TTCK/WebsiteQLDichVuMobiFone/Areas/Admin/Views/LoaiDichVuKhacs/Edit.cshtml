@model WebsiteQLDichVuMobiFone.Models.LoaiDichVuKhac

@{
    ViewData["Title"] = "Chỉnh Sửa Loại Dịch Vụ Khác";
}

<div class="container mt-4">
    <h2 class="text-primary mb-3">Chỉnh Sửa Loại Dịch Vụ Khác</h2>
    <div class="card shadow-sm p-4 rounded">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdloaiDichVuKhac" />

            <!-- Chọn Dịch Vụ (Ẩn nếu giá trị cố định là 4) -->
            <div class="form-group mb-3" @(Model.IddichVu == 4 ? "style=display:none;" : "")>
                <label asp-for="IddichVu" class="fw-bold">Chọn Dịch Vụ</label>
                <select asp-for="IddichVu" class="form-control" asp-items="ViewBag.IddichVu"></select>
                <span asp-validation-for="IddichVu" class="text-danger"></span>
            </div>

            <!-- Nhập Tên Loại Dịch Vụ -->
            <div class="form-group mb-3">
                <label asp-for="TenLoaiDichVu" class="fw-bold">Tên Loại Dịch Vụ</label>
                <input asp-for="TenLoaiDichVu" class="form-control" placeholder="Nhập tên loại dịch vụ..." required />
                <span asp-validation-for="TenLoaiDichVu" class="text-danger"></span>
            </div>

            <!-- Nút Lưu và Quay lại -->
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-success">
                    <i class="fa-solid fa-check"></i> Lưu
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fa-solid fa-arrow-left"></i> Quay lại
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
