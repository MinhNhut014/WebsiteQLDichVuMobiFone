@model WebsiteQLDichVuMobiFone.Models.GoiDangKyDichVuKhac

@{
    ViewData["Title"] = "Chi Tiết Gói Dịch Vụ";
}

<div class="container mt-4">
    <h2 class="text-center text-white fw-bold py-3 rounded-3" style="background: linear-gradient(90deg, #007bff, #6610f2);">
        <i class="fa-solid fa-circle-info"></i> Chi Tiết Gói Dịch Vụ
    </h2>

    <div class="card shadow-lg p-4 rounded-4 border-0" style="background-color: #f8f9fa;">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <table class="table table-bordered shadow-sm bg-white rounded-3">
                    <tbody>
                        <tr>
                            <th class="bg-light text-primary"><i class="fa-solid fa-file-signature"></i> Tên Gói</th>
                            <td>@Html.DisplayFor(model => model.TenGoi)</td>
                        </tr>
                        <tr>
                            <th class="bg-light text-primary"><i class="fa-solid fa-money-bill-wave"></i> Giá Gói</th>
                            <td>@Html.DisplayFor(model => model.GiaGoi) VNĐ</td>
                        </tr>
                        <tr>
                            <th class="bg-light text-primary"><i class="fa-solid fa-calendar-alt"></i> Thời Hạn</th>
                            <td>@Html.DisplayFor(model => model.ThoiHan) tháng</td>
                        </tr>
                        <tr>
                            <th class="bg-light text-primary"><i class="fa-solid fa-box"></i> Sản Phẩm</th>
                            <td>@Html.DisplayFor(model => model.IdsanPhamNavigation.IdsanPham)</td>
                        </tr>
                    </tbody>
                </table>

                <!-- Nút thao tác -->
                <div class="text-center mt-4">
                    <a asp-action="Edit" asp-route-id="@Model?.IdgoiDangKy" class="btn btn-warning shadow-sm px-4 fw-bold">
                        <i class="fa-solid fa-edit"></i> Chỉnh Sửa
                    </a>
                    <a asp-action="Index" class="btn btn-secondary shadow-sm px-4 ms-2 fw-bold">
                        <i class="fa-solid fa-arrow-left"></i> Quay Lại
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
