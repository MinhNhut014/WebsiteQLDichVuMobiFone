@model IEnumerable<WebsiteQLDichVuMobiFone.Models.SanPhamDichVuKhac>

@{
    ViewData["Title"] = "Danh sách Sản Phẩm Dịch Vụ Khác";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold">📋 Danh sách Sản Phẩm Dịch Vụ Khác</h2>
        <a asp-action="Create" class="btn btn-success rounded-3">➕ Thêm Sản Phẩm</a>
    </div>
    <table class="table table-hover shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Tên Sản Phẩm</th>
                <th>Hình Ảnh</th>
                <th>Mô Tả</th>
                <th>Loại Dịch Vụ</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.TenSanPham</td>
                    <td>
                        <img src="~/img/dichvu/dichvukhac/@item.HinhAnh" alt="Ảnh Sản Phẩm" class="img-thumbnail" style="width: 80px; height: auto;" />
                    </td>
                    <td>@item.MoTa</td>
                    <td>@item.IdloaiDichVuKhacNavigation?.TenLoaiDichVu</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.IdsanPham" class="btn btn-warning btn-sm">✏️ Sửa</a>
                        <a asp-action="Details" asp-route-id="@item.IdsanPham" class="btn btn-info btn-sm">🔍 Xem</a>
                        <a asp-action="Delete" asp-route-id="@item.IdsanPham" class="btn btn-danger btn-sm">🗑️ Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-action="Index" class="btn btn-secondary mt-3">🔙 Quay lại</a>
</div>
