@model WebsiteQLDichVuMobiFone.Models.SanPhamDichVuKhac

@{
    ViewData["Title"] = "Chi tiết Sản Phẩm Dịch Vụ Khác";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-gradient text-white text-center" style="background: linear-gradient(135deg, #007bff, #0056b3);">
            <h2 class="mb-0">🔍 Chi tiết Sản Phẩm Dịch Vụ Khác</h2>
        </div>
        <div class="card-body p-4">
            <div class="row mb-4">
                <div class="col-md-4 text-center">
                    <img src="~/images/@Model.HinhAnh" alt="Ảnh Sản Phẩm" class="img-thumbnail rounded-3 shadow-sm" style="max-width: 250px; height: auto;" />
                </div>
                <div class="col-md-8">
                    <h4 class="fw-bold">📄 Tên Sản Phẩm:</h4>
                    <p>@Model.TenSanPham</p>

                    <h4 class="fw-bold">📝 Mô Tả:</h4>
                    <p>@Model.MoTa</p>

                    <h4 class="fw-bold">📋 Thông Tin Chi Tiết:</h4>
                    <div class="p-3 border rounded shadow-sm" style="background-color: #f9f9f9; max-height: 200px; overflow-y: auto;">
                        @Html.Raw(Model.ThongTinChiTiet)
                    </div>

                    <h4 class="fw-bold">📂 Loại Dịch Vụ Khác:</h4>
                    <p>@Model.IdloaiDichVuKhacNavigation?.TenLoaiDichVu</p>
                </div>
            </div>
            <div class="d-flex justify-content-between">
                <a asp-action="Edit" asp-route-id="@Model?.IdsanPham" class="btn btn-outline-warning rounded-3 px-4">✏️ Chỉnh sửa</a>
                <a asp-action="Index" class="btn btn-outline-primary rounded-3 px-4">🔙 Quay lại</a>
            </div>
        </div>
    </div>
</div>
