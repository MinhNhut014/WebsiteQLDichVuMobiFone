@model IEnumerable<WebsiteQLDichVuMobiFone.Models.LienHe>

@{
    ViewData["Title"] = "Danh sách Liên Hệ";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="text-primary fw-bold m-0">Danh sách Liên Hệ</h1>
    <a asp-action="Create" class="btn btn-primary shadow-sm px-4">
        <i class="fa-solid fa-plus"></i> Thêm mới
    </a>
</div>

<div class="table-responsive">
    <table class="table table-hover table-striped table-bordered align-middle shadow-sm rounded-3 overflow-hidden">
        <thead class="bg-gradient bg-primary text-white text-center">
            <tr>
                <th class="p-3">Họ Tên</th>
                <th class="p-3">Email</th>
                <th class="p-3">Số Điện Thoại</th>
                <th class="p-3">Nội Dung</th>
                <th class="p-3">Ngày Gửi</th>
                <th class="p-3">Trạng Thái</th>
                <th class="p-3">Người Gửi</th>
                <th class="p-3">Hành động</th>
            </tr>
        </thead>
        <tbody class="bg-light">
            @foreach (var item in Model)
            {
                <tr class="text-center border-bottom">
                    <td class="p-3">@item.HoTen</td>
                    <td class="p-3">@item.Email</td>
                    <td class="p-3">@item.SoDienThoai</td>
                    <td class="p-3">@item.NoiDung</td>
                    <td class="p-3">@item.NgayGui?.ToString("dd/MM/yyyy")</td>

                    <!-- Dropdown chỉnh sửa trạng thái -->
                    <td class="p-3">
                        <form asp-action="UpdateStatus" method="post">
                            <input type="hidden" name="id" value="@item.IdlienHe" />
                            <select name="trangthai" class="form-select w-auto d-inline" onchange="this.form.submit()">
                                <option value="false" selected="@(item.TrangThai == false)">Chưa Xử Lý</option>
                                <option value="true" selected="@(item.TrangThai == true)">Đã Xử Lý</option>
                            </select>
                        </form>
                    </td>

                    <td class="p-3">
                        @(item.IdnguoiDungNavigation?.HoTen ?? "Khách vãng lai")
                    </td>

                    <!-- Các hành động -->
                    <td class="p-3 d-flex justify-content-center gap-2">
                        <a asp-action="Edit" asp-route-id="@item.IdlienHe" class="btn btn-warning btn-sm rounded-circle shadow-sm">
                            <i class="fa-solid fa-pen"></i>
                        </a>
                        <a asp-action="Details" asp-route-id="@item.IdlienHe" class="btn btn-info btn-sm text-white rounded-circle shadow-sm">
                            <i class="fa-solid fa-eye"></i>
                        </a>
                        <a href="javascript:void(0);" onclick="confirmDelete(@item.IdlienHe, '@item.HoTen')"
                           class="btn btn-danger btn-sm rounded-circle shadow-sm">
                            <i class="fa-solid fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    function confirmDelete(id, hoTen) {
        Swal.fire({
            title: "Bạn có chắc chắn?",
            text: "Bạn có chắc chắn muốn xóa tin nhắn '" + hoTen + "' không?",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#d33",
            cancelButtonColor: "#3085d6",
            confirmButtonText: "Xóa ngay!",
            cancelButtonText: "Hủy"
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = "/Admin/LienHes/DeleteConfirmed/" + id;
            }
        });
    }
</script>
