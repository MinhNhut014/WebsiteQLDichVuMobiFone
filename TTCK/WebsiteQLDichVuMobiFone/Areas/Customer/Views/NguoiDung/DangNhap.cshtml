@{
    ViewData["Title"] = "Đăng Nhập";
}

<!-- Custom CSS -->
<style>
    body {
        background: linear-gradient(to right, #cceeff, #e6f7ff);
        font-family: 'Segoe UI', sans-serif;
    }

    .login-wrapper {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
    }

    .login-box {
        background: #ffffff;
        padding: 50px 40px;
        border-radius: 20px;
        box-shadow: 0 10px 30px rgba(0, 123, 255, 0.15);
        max-width: 500px;
        width: 100%;
    }

    .login-title {
        font-size: 28px;
        font-weight: 700;
        color: #007bff;
        text-align: center;
        margin-bottom: 30px;
    }

    .form-label {
        color: #0056b3;
        font-weight: 600;
    }

    .form-control {
        border-radius: 12px;
        border: 1px solid #b6dcff;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.2);
        }

    .btn-login {
        background-color: #007bff;
        color: #fff;
        border-radius: 30px;
        font-weight: 600;
        padding: 10px 0;
        transition: all 0.3s ease;
    }

        .btn-login:hover {
            background-color: #0056b3;
        }

    .password-wrapper {
        position: relative;
    }

        .password-wrapper input {
            padding-right: 40px;
        }

    .toggle-password {
        position: absolute;
        top: 50%;
        right: 12px;
        transform: translateY(-50%);
        cursor: pointer;
        color: #007bff;
        font-size: 18px;
    }

    .register-link {
        text-align: center;
        margin-top: 25px;
    }

    .alert {
        font-size: 14px;
        padding: 10px;
    }
</style>

<!-- Login Layout -->
<div class="login-wrapper">
    <div class="login-box">
        <h3 class="login-title">ĐĂNG NHẬP</h3>

        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <div class="alert alert-danger text-center">
                @ViewBag.ErrorMessage
            </div>
        }

        <form method="post" asp-action="DangNhap">
            <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />

            <div class="mb-4">
                <label for="email" class="form-label">Email hoặc Tên đăng nhập</label>
                <input type="text" class="form-control" id="email" name="tenDangNhapHoacEmail" placeholder="Nhập email hoặc tên đăng nhập" required />
            </div>

            <div class="mb-4">
                <label for="matkhau" class="form-label">Mật khẩu</label>
                <div class="password-wrapper">
                    <input type="password" class="form-control" id="matkhau" name="matKhau" placeholder="Nhập mật khẩu" required />
                    <span class="toggle-password" onclick="togglePassword()">
                        <i class="bi bi-eye" id="eyeIcon"></i>
                    </span>
                </div>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-login">Đăng nhập</button>
            </div>
        </form>

        <!-- Quên mật khẩu -->
        <div class="mt-3 text-center">
            <a href="javascript:void(0);" class="text-primary fw-semibold text-decoration-none" onclick="handleForgotPassword()">Quên mật khẩu?</a>
        </div>

        <div class="register-link mt-4">
            <span class="text-muted">Chưa có tài khoản?</span>
            <a asp-action="DangKy" class="text-primary fw-semibold text-decoration-none">Đăng ký ngay</a>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function togglePassword() {
            const input = document.getElementById("matkhau");
            const icon = document.getElementById("eyeIcon");
            if (input.type === "password") {
                input.type = "text";
                icon.classList.remove("bi-eye");
                icon.classList.add("bi-eye-slash");
            } else {
                input.type = "password";
                icon.classList.remove("bi-eye-slash");
                icon.classList.add("bi-eye");
            }
        }

        function handleForgotPassword() {
            const emailInput = document.getElementById("email").value;
            if (!emailInput) {
                alert("Vui lòng nhập email hoặc tên đăng nhập trước khi sử dụng chức năng quên mật khẩu.");
                return;
            }

            console.log("Đang gửi yêu cầu quên mật khẩu với tên đăng nhập:", emailInput);

            const form = document.createElement("form");
            form.method = "post";
            form.action = "/Customer/NguoiDung/QuenMatKhau";

            const input = document.createElement("input");
            input.type = "hidden";
            input.name = "tenDangNhap";
            input.value = emailInput;

            form.appendChild(input);
            document.body.appendChild(form);
            form.submit();
        }
    </script>
}
