@model WebsiteQLDichVuMobiFone.Models.HoaDonSim

@{
    ViewData["Title"] = "Chi Tiết Hóa Đơn SIM";
}

<h2 class="text-center text-primary">Chi Tiết Hóa Đơn SIM</h2>

<div class="card shadow p-4">
    <h4>Thông Tin Hóa Đơn</h4>
    <table class="table table-bordered table-striped">
        <tr>
            <th>ID Hóa Đơn SIM</th>
            <td>@Model.IdhoaDonSim</td>
        </tr>
        <tr>
            <th>Ngày Đặt Hàng</th>
            <td>@Model.NgayDatHang?.ToString("dd/MM/yyyy") ?? "N/A"</td>
        </tr>
        <tr>
            <th>Tổng Tiền</th>
            <td>@Model.TongTien?.ToString("N0") VNĐ</td>
        </tr>
        <tr>
            <th>Tên Khách Hàng</th>
            <td>@Model.TenKhachHang</td>
        </tr>
        <tr>
            <th>Số Điện Thoại</th>
            <td>@Model.SoDienThoai</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>@Model.Email</td>
        </tr>
    </table>

    <h4>Chi Tiết Gói Đăng Ký</h4>
    <table class="table table-hover table-striped">
        <thead class="table-dark">
            <tr>
                <th>Tên Gói</th>
                <th>Giá Gói</th>
                <th>Thời Hạn</th>
                <th>Tính Năng</th>
                <th>Số Lượng</th>
                <th>Thành Tiền</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.CthoaDonSims)
            {
                <tr>
                    <td>@item.IdgoiDangKyNavigation?.TenGoi</td>
                    <td>@item.IdgoiDangKyNavigation?.GiaGoi?.ToString("N0") VNĐ</td>
                    <td>@item.IdgoiDangKyNavigation?.ThoiHan tháng</td>
                    <td>@item.IdgoiDangKyNavigation?.TinhNang</td>
                    <td>@item.SoLuong</td>
                    <td>@item.ThanhTien?.ToString("N0") VNĐ</td>
                </tr>
            }
        </tbody>
    </table>

    <a asp-controller="NguoiDung" asp-action="HoSoNguoiDung" class="btn btn-secondary">Quay Lại</a>
</div>
