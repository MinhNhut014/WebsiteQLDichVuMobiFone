    <div class="row g-4">
        <div class="col-md-4">
            <a asp-action="LichSu" class="text-decoration-none">
                <div class="card text-center p-3 shadow-sm">
                    <img src="~/img/gioithieu/gioithieu_lichsu.png" class="mx-auto" alt="Lịch sử hình thành">
                    <div class="card-body">
                        <h5 class="card-title">Lịch sử hình thành</h5>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-4">
            <a asp-action="CoCau" class="text-decoration-none">
                <div class="card text-center p-3 shadow-sm">
                    <img src="~/img/gioithieu/gioithieu_cocau.png" class="mx-auto" alt="Cơ cấu tổ chức">
                    <div class="card-body">
                        <h5 class="card-title">Cơ cấu tổ chức</h5>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-4">
            <a asp-action="CamKet" class="text-decoration-none">
                <div class="card text-center p-3 shadow-sm">
                    <img src="~/img/gioithieu/gioithieu_camket.png" class="mx-auto" alt="Cam kết khách hàng">
                    <div class="card-body">
                        <h5 class="card-title">Cam kết khách hàng</h5>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-4">
            <a asp-action="TamNhin" class="text-decoration-none">
                <div class="card text-center p-3 shadow-sm">
                    <img src="~/img/gioithieu/gioithieu_tamnhinsumenh.png" class="mx-auto" alt="Tầm nhìn sứ mệnh">
                    <div class="card-body">
                        <h5 class="card-title">Tầm nhìn sứ mệnh</h5>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-4">
            <a asp-action="QuanLy" class="text-decoration-none">
                <div class="card text-center p-3 shadow-sm">
                    <img src="~/img/gioithieu/gioithieu_qlchatluong.png" class="mx-auto" alt="Quản lý chất lượng">
                    <div class="card-body">
                        <h5 class="card-title">Quản lý chất lượng dịch vụ</h5>
                    </div>
