        </div>
        <div class="position-relative">
            <button class="mobifone-btn-prev" onclick="mobifonePrevSlide()">&#10094;</button>
            <div class="mobifone-news-slider-wrapper overflow-hidden row g-4 justify-content-center">
                <div class="mobifone-news-slider d-flex row g-4 justify-content-center" id="newsSlider">
                    @foreach (var tin in danhSachTinTuc)
                    {
                        <div class="col-md-3 col-sm-6 mb-4">
                            <div class="card h-100 shadow-sm border-0 rounded-3" style="transition: transform 0.3s, box-shadow 0.3s;">
