@model WebsiteQLDichVuMobiFone.Areas.Customer.ViewModels.SimViewModel

<div class="container mt-4">
    <!-- Thông tin SIM -->
    <div class="card p-4 shadow-sm mb-4">
        <div class="bg-primary text-white p-3 rounded-top">
            <h5 class="fw-bold">Thuê bao @Model.LoaiSo</h5>
            <h1 class="fw-bold">@Model.SoThueBao</h1>
            <h5>Gói cước đăng ký: <span id="selectedGoiCuoc">@Model.TenGoiCuoc</span></h5>
        </div>
        <div class="p-3 bg-white rounded-bottom border-top">
            <div class="d-flex justify-content-between">
                <span>Loại số:</span> <strong>Số thường</strong>
            </div>
            <div class="d-flex justify-content-between">
                <span>Khu vực hòa mạng:</span> <strong>@Model.KhuVucHoaMang</strong>
            </div>
            <div class="d-flex justify-content-between">
                <span>Phí giữ số:</span> <strong>Miễn phí</strong>
            </div>
            <div class="d-flex justify-content-between">
                <span>Phí hòa mạng:</span> <strong>@Model.PhiHoaMang.ToString("N0")đ</strong>
            </div>
            <div class="d-flex justify-content-between">
                <span>Giá gói cước:</span> <strong>90.000đ</strong>
            </div>
        </div>
    </div>

    <!-- Gói cước đi kèm -->
    <form method="post" asp-controller="Home" asp-action="Sim_DangKy">
        <!-- Thêm các input ẩn để truyền simId và goiCuocId -->
        <input type="hidden" name="simId" value="@Model.SimId" />
        <input type="hidden" name="goiCuocId" value="@Model.GoiCuocId" />

        <h4 class="fw-bold">Gói cước đi kèm</h4>
        <p>Chọn một trong các gói cước theo nhu cầu sử dụng của bạn</p>

        <div class="row">
            @if (Model.GoiCuocList != null && Model.GoiCuocList.Any())
            {
                @foreach (var goiCuoc in Model.GoiCuocList)
                {
                    <div class="col-md-4 mb-3">
                        <div class="card shadow-sm border-0 p-3 goi-cuoc-card">
                            <input type="radio" name="goiCuocId" value="@goiCuoc.IdgoiDangKy" class="form-check-input" required />
                            <h5 class="fw-bold">@goiCuoc.TenGoi</h5>
                            <p class="text-muted">Chu kỳ sử dụng 30 ngày</p>
                            <p class="fw-bold">@goiCuoc.GiaGoi đ / @goiCuoc.ThoiHan</p>
                        </div>
                    </div>
                }
            }
            else
            {
                <p class="text-danger">Không tìm thấy gói cước nào phù hợp.</p>
            }
        </div>

        <button type="submit" class="btn btn-success w-100 mt-3">Tiếp tục</button>
    </form>
</div>
