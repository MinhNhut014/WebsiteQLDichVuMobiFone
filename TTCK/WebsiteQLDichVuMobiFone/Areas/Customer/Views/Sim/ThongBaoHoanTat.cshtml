@model WebsiteQLDichVuMobiFone.Models.HoaDonSim

@{
    ViewData["Title"] = "Thông Báo Hoàn Tất Đăng Ký SIM";
}

<div class="container mt-5">
    <div class="text-center mb-5">
        <h2 class="fw-bold text-success">Đăng Ký SIM Thành Công</h2>
        <p class="text-muted">Chúc mừng bạn đã đăng ký thành công SIM và gói cước. Vui lòng kiểm tra thông tin dưới đây.</p>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <div class="row g-4">
        <div class="col-md-12">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-body p-4">
                    <h4 class="card-title text-primary mb-3">Thông tin đơn hàng</h4>

                    <p><strong>Mã đơn hàng:</strong> @Model.IdhoaDonSim</p>
                    <p><strong>Tên khách hàng:</strong> @Model.TenKhachHang</p>
                    <p><strong>Số điện thoại:</strong> @Model.SoDienThoai</p>
                    <p><strong>Email:</strong> @Model.Email</p>
                    <p><strong>Địa chỉ nhận hàng:</strong> @Model.DiaDiemNhan</p>

                    <!-- Kiểm tra null trước khi hiển thị tên phương thức vận chuyển -->
                    <p><strong>Phương thức vận chuyển:</strong> @(Model.IdphuongThucVcNavigation?.TenVanChuyen ?? "Chưa xác định")</p>

                    <p><strong>Phương thức thanh toán:</strong> @Model.PhuongThucThanhToan</p>
                    <p><strong>Tổng tiền:</strong> @Model.TongTien VND</p>

                    <h5 class="text-success mt-4">Cảm ơn bạn đã sử dụng dịch vụ của chúng tôi. Đơn hàng của bạn đang được xử lý.</h5>

                    <a href="@Url.Action("Index", "Home")" class="btn btn-primary w-100 py-2 mt-4">Quay lại trang chủ</a>
                </div>
            </div>
        </div>
    </div>
</div>
