@model WebsiteQLDichVuMobiFone.Models.HoaDonDichVu

@{
    ViewData["Title"] = "Thông Báo Hoàn Tất Đăng Ký Dịch Vụ";
}

<div class="container mt-5">
    <!-- Breadcrumb chỉ dẫn -->
    <div class="step-progress d-flex justify-content-center gap-4">
        <div class="step completed">
            <div class="circle"><i class="bi bi-check-circle"></i></div>
            <span class="d-block mt-2">Đăng ký</span>
        </div>
        <div class="step completed">
            <div class="circle"><i class="bi bi-check-circle"></i></div>
            <span class="d-block mt-2">Hoàn tất</span>
        </div>
    </div>

    <div class="text-center mb-5">
        <h2 class="fw-bold text-success">Đăng Ký Thành Công Dịch Vụ</h2>
        <p class="text-muted">Chúc mừng bạn đã đăng ký thành công dịch vụ của chúng tôi. Đơn hàng của bạn sẽ được xử lý trong thời gian sớm nhất.</p>
        <p class="text-muted">Vui lòng bấm nút "Xem đơn hàng" để kiểm tra chi tiết về đơn hàng của bạn.</p>
    </div>

    <div class="d-flex gap-3 mt-4">
        <a href="@Url.Action("Index", "Home")" class="btn btn-primary w-50 py-2">Quay lại trang chủ</a>
        <a href="@Url.Action("ChiTietHoaDonDichVuKhac", "NguoiDung", new { id = Model.IdhoaDonDv })" class="btn btn-outline-success w-50 py-2">Xem đơn hàng</a>
    </div>

</div>

<style>
    .step-progress {
        display: flex;
        gap: 30px;
        padding-bottom: 20px;
        position: relative;
    }

    .step {
        display: flex;
        flex-direction: column;
        align-items: center;
        position: relative;
    }

        .step .circle {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: #e0e0e0;
            display: flex;
            justify-content: center;
            align-items: center;
            font-weight: bold;
            font-size: 18px;
            color: #6c757d;
            z-index: 2;
        }

        .step.completed .circle {
            background: #007bff;
            color: white;
        }

        .step::after {
            content: "";
            position: absolute;
            width: 60px;
            height: 5px;
            background: #e0e0e0;
            top: 18px;
            left: 50%;
            transform: translateX(30px);
            z-index: 1;
        }

        .step.completed::after {
            background: #007bff;
        }

        .step:last-child::after {
            content: none;
        }

    .btn-lg {
        padding: 12px 24px;
        font-size: 1.1rem;
    }

    .mb-5 {
        margin-bottom: 3rem;
    }

    .text-muted {
        font-size: 1rem;
    }

    .fw-bold {
        font-weight: 600;
    }
</style>